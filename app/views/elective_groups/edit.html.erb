<div id="content-header">
  <img src="/images/examination/show_exam.png" alt="Exam" />
  <h1><%= t('app.views.elective_groups.edit.courses') %></h1>
  <h3><%= t('app.views.elective_groups.edit.edit_batch') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>


<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

<div class="bread_crumb">
         <%= link_to t('app.views.elective_groups.edit.courses'), courses_path %> &raquo;
        <%= link_to @course.full_name, @course %> &raquo;
        <%= link_to t('app.views.elective_groups.edit.batch') " #{@batch.name}" %> &raquo;
        Edit
        </div>
  <div class="box">


    <% form_for [@course, @batch] do |f| %>

      <div class="label-field-pair">
        <div class="label-container"><%= f.label t('app.views.elective_groups.edit.name') %></div>
        <div class="input-container"><%= f.text_field :name %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container"><%= f.label t('app.views.elective_groups.edit.start_date') %></div>
        <div class="input-container"><%= calendar_date_select_tag 'batch[start_date]', Date.today %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container"><%= f.label t('app.views.elective_groups.edit.end_date') %></div>
        <div class="input-container"><%= calendar_date_select_tag 'batch[end_date]', Date.today + 1.year %></div>
      </div>

      <%= submit_tag "", :value => t('app.views.elective_groups.edit.save'), :class => "submit_button" %>


    <% end %>

    <div class="extender"</div>
  </div>
</div>
