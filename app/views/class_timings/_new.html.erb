<label class="head_label"><%=t('app.views.class_timings._new.create_title')%>
  <span>
    <% if @batch.nil?%>
      <%= "common" %>
    <% else %>
      <%=  @batch.full_name %>
    <% end %>
  </span></label>
<div id="ajax-create">
  <% form_remote_for :class_timing,
    :url => { :action => 'create'} do |f| %>

    <% batch_id = (@batch.nil? ? nil : @batch.id) %>
    <%= f.hidden_field :batch_id, :value => batch_id %>
  <div id="form-errors"></div>

    <div class="label-field-pair">
      <label for="name"> <%=t('app.views.class_timings._new.name')%></label>
      <div class="input-field"><%= f.text_field :name %></div>
    </div>


    <div class="label-field-pair">
      <label for="name"> <%=t('app.views.class_timings._new.start_time')%></label>
      <div class="time-select-field"><%= time_select :class_timing, :start_time, {:minute_step => 5} %></div>
    </div>

    <div class="label-field-pair">
      <label for="name"><%=t('app.views.class_timings._new.end_time')%></label>
      <div class="time-select-field"><%= time_select :class_timing, :end_time, {:minute_step => 5} %></div>
    </div>

    <div class="label-checkbox-pair">
      <label><%= f.check_box :is_break, :checked => false %> <%=t('app.views.class_timings._new.is_break')%></label>
    </div>

    <%= f.submit t('app.views.class_timings._new.save'), :class => 'submit-button' %>

  <% end %>
</div>
