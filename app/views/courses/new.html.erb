<div id="content-header">
  <img src="/images/examination/show_exam.png" alt="Exam" />
  <h1><%= t('app.views.courses.new.course') %></h1>
  <h3><%= t('app.views.courses.new.new') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">
    <div class="bread_crumb">
      <%= link_to t('app.views.courses.new.courses'), courses_path %> &raquo;
      <%= t('app.views.courses.new.new') %>
    </div>

    <% form_for setup_course(@course) do |f| %>

      <%= error_messages_for :course %>

      <div class="label-field-pair">
        <div class="label-container"><%= f.label t('app.views.courses.new.course_name') %></div>
        <div class="input-container"><%= f.text_field :course_name %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container"><%= f.label t('app.views.courses.new.section_name') %></div>
        <div class="input-container"><%= f.text_field :section_name %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container"><%= f.label t('app.views.courses.new.code')%></div>
        <div class="input-container"><%= f.text_field :code %></div>
      </div>

      <h4><%= t('app.views.courses.new.initial_batch_details') %></h4>

      <% f.fields_for :batches do |batch_form| %>

        <div class="label-field-pair">
          <div class="label-container"><%= batch_form.label t('app.views.courses.new.name') %></div>
          <div class="input-container"><%= batch_form.text_field :name %></div>
        </div>


        <div class="label-field-pair">
          <div class="label-container"><%= batch_form.label t('app.views.courses.new.start_date') %></div>
          <div class="input-container"><%= calendar_date_select_tag 'course[batches_attributes][0][start_date]', Date.today %></div>
        </div>

        <div class="label-field-pair">
          <div class="label-container"><%= batch_form.label t('app.views.courses.new.final_date') %></div>
          <div class="input-container"><%= calendar_date_select_tag 'course[batches_attributes][0][end_date]', Date.today + 1.year %></div>
        </div>

      <% end %>

      <%= submit_tag "", :value => t('app.views.courses.new.save'), :class => "submit_button" %>

    <% end %>

    <div class="extender"></div>
  </div>
</div>
