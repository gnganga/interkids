
<div id="grading-levels-form">
  <h4><%= @batch.full_name unless @batch.nil? %></h4>

  <% form_remote_for @grading_level do |f| %>

<div id="form-errors"></div>

  <div class="label-field-pair">
    <div class="label-container"><%= f.label t('app.views.grading_levels._edit.name') %></div>
    <div class="input-container"> <%= f.text_field :name %></div>
  </div>

    <div class="label-field-pair">
    <div class="label-container"><%= f.label t('app.views.grading_levels._edit.min_score') %></div>
    <div class="input-container"> <%= f.text_field :min_score %></div>
   </div>

    <%= submit_tag "", :value => t('app.views.grading_levels._edit.save'), :class => "submit_button" %>


  <% end %>
</div>
