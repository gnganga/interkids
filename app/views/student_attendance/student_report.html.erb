<div id="content-header">
  <img src="/images/attendence/attendence.png" />
  <h1><%= t('app.views.student_attendance.student_report.attendance') %></h1>
  <h3><%= t('app.views.student_attendance.student_report.student_report') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">
  <div id="box">
    <% remote_form_for :advance_search do |f| %>
      <div class="label-field-pair">
        <label for="student"><%= t('app.views.student_attendance.student_report.student_name') %></label>
        <div class="text-input-bg">
          <%= f.text_field :student_name, :value => @student.full_name, :disabled=> true %></div>
      </div>
      <div class="label-field-pair">
        <label for="student"><%= t('app.views.student_attendance.student_report.admission_no') %></label>
        <div class="text-input-bg">
          <%= f.text_field :student_id, :value => @student.admission_no, :disabled=> true  %></div>
      </div>

    <% end %>

    <div id="report">
      <% working_days = @report.size %>
      <% leaves =0 %>
      <% percentage = 0 %>
      <% table_id = [] %>

      <% @report.each do |r| %>
        <% @attendance = Attendance.find_by_student_id_and_period_table_entry_id(@student.id, r.id) %>
        <% unless @attendance.nil? %>
          <% table_id.push @attendance.id %>
          <% if @config.config_value == 'Daily' %>
            <% leaves += 0.5 if @attendance.forenoon %>
            <% leaves += 0.5 if @attendance.afternoon %>
          <% else %>
            <% leaves += 1 %>
          <% end %>
        <% end %>
      <% end %>
      <div class="att_detail">
        <%  if @config.config_value == 'Daily' %>
          <%= t('app.views.student_attendance.student_report.total_working_days') %> <%= working_days %>
        <% else %>
          <%= t('app.views.student_attendance.student_report.total_working_hours') %> <%= working_days %>
        <% end %>|<%= t('app.views.student_attendance.student_report.total_present') %> <%= total = (working_days - leaves).to_f %> |
        <% percentage =  (total/working_days)*100 unless working_days == 0 %>
        <%= t('app.views.student_attendance.student_report.percentage') %> <%= percentage.round.to_f unless percentage.nil? %>
      </div>
      <% unless table_id.empty? %>
        <table id="listing" align="center" width="80%">
          <tr class="tr-head">
            <td>
              <%= t('app.views.student_attendance.student_report.date') %>
            </td>
            <td>
              <%= t('app.views.student_attendance.student_report.status') %>
            </td>
            <td>
             <%= t('app.views.student_attendance.student_report.reason') %>
            </td>
          </tr>
          <tr class="blank"></tr>
          <% table_id.each do |t| %>
            <% detail_report = Attendance.find(t) %>
            <tr class="tr-<%= cycle('odd', 'even') %>">
              <% @details = PeriodEntry.find(detail_report.period_table_entry_id) %>
              <td class="col-2"><%= @details.month_date.to_date %></td>
              <td class="col-3">
                <% if detail_report.forenoon and detail_report.afternoon %>
                  <%= t('app.views.student_attendance.student_report.fullday') %>
                <% elsif detail_report.afternoon %>
                  <%= t('app.views.student_attendance.student_report.afternoon') %>
                <% elsif detail_report.forenoon %>
                  <%= t('app.views.student_attendance.student_report.forenoon') %>
                <% else %>
                  <%= t('app.views.student_attendance.student_report.absent') %>
                <% end %>
              </td>
              <td class="col-2">
                <%= detail_report.reason %></td>
            <% end %>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>