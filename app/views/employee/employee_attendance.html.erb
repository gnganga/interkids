      <div class="link-heading"><%= link_to t('app.views.employee.employee_attendance.attendance_register'), :controller=>"employee_attendances", :action=>"index"%></div>
      <div class="link-descr"><%= t('app.views.employee.employee_attendance.register_attendance.') %></div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to t('app.views.employee.employee_attendance.attendance_report'), :controller=>"employee_attendance", :action=>"report" %></div>
      <div class="link-descr"><%= t('app.views.employee.employee_attendance.attendance_reports') %></div>
    </div>
  </div>


