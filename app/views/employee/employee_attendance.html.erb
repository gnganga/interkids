      <div class="link-heading"><%= link_to t('app.views.employee.employee_attendance.add_leave_type'), :controller=>"employee_attendance", :action=>"add_leave_types"%></div>
      <div class="link-descr"><%= t('app.views.employee.employee_attendance.add_and_edit_employee_attendance_types') %></div>
