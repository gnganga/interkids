  <h1><%= t('app.views.employee.employee_attendance.manage_attendance') %></h1>
  <h3><%= t('app.views.employee.employee_attendance.leave_and_attendance') %></h3>
  <div id="app-back-button">
   <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
