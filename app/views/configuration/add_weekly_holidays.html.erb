<% form_for :holiday do |f| %>
<%= select :holiday, :weekdays, [ t('app.views.configuration.add_weekly_holidays.monday'),
  t('app.views.configuration.add_weekly_holidays.tuesday'),
  t('app.views.configuration.add_weekly_holidays.wednesday'),
  t('app.views.configuration.add_weekly_holidays.thursday'),
  t('app.views.configuration.add_weekly_holidays.friday'),
  t('app.views.configuration.add_weekly_holidays.saturday'),
  t('app.views.configuration.add_weekly_holidays.sunday') ]%>

  <%= submit_tag "Submit" %>
<% end %>
<% unless @weekly_holidays.nil? %>
  <% @weekly_holidays.each do |d| %>
    <%= d.config_value %><%= link_to t('app.views.configuration.add_weekly_holidays.delete'), :action=>"delete", :id=>d.id  %>
    
  <% end %>
<% end %>