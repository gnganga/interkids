
<div id="weekday-form">
  <p><%= @batch.full_name unless @batch.nil? %></p>

  <% form_remote_for @weekday do |f| %>

    <% batch_id = (@batch.nil? ? nil : @batch.id) %>
    <%= f.hidden_field :batch_id, :value => batch_id %>

    <p>
      <%= f.label :select_weekday %>
      <%= select :weekday, :weekday, { t('app.views.weekday._new.monday') =>'1', t('app.views.weekday._new.tuesday') => '2',t('app.views.weekday._new.wednesday') =>'3',t('app.views.weekday._new.thursday') =>'4',t('app.views.weekday._new.friday') =>'5',t('app.views.weekday._new.saturday')=>'6', t('app.views.weekday._new.sunday')=>'0' }%>
    </p>
<%= f.check_box :is_break, :checked => false %> Check if this is a break
<%= f.check_box :is_break, :checked => false %> Check if this is a break
    <p>
      <%= f.submit %>
    </p>

    <div id="form-errors"></div>

  <% end %>
</div>
