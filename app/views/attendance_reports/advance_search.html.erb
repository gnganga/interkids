 <% form_for :advance_search do |f| %>
<%= f.text_field :student%>
<%= f.text_field :student_id %>
<%= f.select :mode, :id,
  {t('app.views.attendance_report.advance_search.monthly')=>"Monthly", t('app.views.attendance_report.advance_search.overall')=>"Overall"},
  {:prompt => t('app.views.attendance_report.advance_search.select_mode')},
  {:onchange => "#{remote_function(
  :url => { :action => 'month' },
  :with => "'mode='+value",
  :before => "Element.show('loader')",
  :success => "Element.hide('loader')"  )}"} %>
<% unless @subject.nil? %>
<%= f.hidden_field :subject , :value=> @subject.id %>
<% end %>
<%= f.submit 'submit'  %>
<% end %>
