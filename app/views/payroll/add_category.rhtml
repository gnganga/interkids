<div id="content-header">
  <img src="/images/HR/show_hr.png" alt="" />
  <h1><%= t('app.views.payroll.add_category.payroll') %></h1>
  <h3><%= t('app.views.payroll.add_category.add_new_category') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>





   <div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <% form_for :category do |c| %>
      <%= error_messages_for 'category' %>

    <div id="form-content">
      <div class="label-field-pair">
        <label for="category_name"><%= t('app.views.payroll.add_category.category_name') %></label>
        <div class="text-input-bg"><%= c.text_field :name %></div>
      </div>

      <div class="label-field-pair">
        <label for="percentage"><%= t('app.views.payroll.add_category.percentage') %></label>
        <div class="text-input-bg"><%= c.text_field :percentage %></div>
      </div>

      <div class="label-field-pair">
        <label for="percentage_of"><%= t('app.views.payroll.add_category.percentage_of') %></label>
        <div class="text-input-bg">
          <%= select :category, :payroll_category_id, @categories.map {|cat| [cat.name, cat.id]}, :prompt =>t('app.views.payroll.add_category.select') %>
        </div>
      </div>
 <div class="label-radio-pair">
      <label class="status" for="status"><%= t('app.views.payroll.add_category.status') %></label>
<div id="radio-buttons">
      <%= c.radio_button  "status", "true", :checked => "checked" %>
      <label class="label_for_status" for="add_grade_status_true"><%= t('app.views.payroll.add_category.active') %></label>

      <%= c.radio_button  "status", "false" %>
      <label class="label_for_status" for="add_grade_status_false"><%= t('app.views.payroll.add_category.inactive') %></label>
    </div>
    </div>
      <div class="label-checkbox">
        <%= c.check_box :is_deduction %> <%= t('app.views.payroll.add_category.is_deduction') %>
      </div>
<div class="extender"></div>
   
    <div id="submit-button">
      <%=submit_tag(t('app.views.payroll.add_category.create')) %>
    </div>


      </div>
  <% end %>

  <div id="category-list">
    <%= render :partial=>"category" %>
  </div>

   </div>