<div id="content-header">
  <img src="/images/show_finance.png" alt="" />
  <h1><%= t('app.views.student_invoice_datas.show.finance_manager') %></h1>
  <h3><%= t('app.views.student_invoice_datas.show.success_operation') %> </h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">
	<div class="box">

	      <div class="label-field-pair">
		<label><%= t('app.views.student_invoice_datas.show.name') %></label>
		<div class="text-input-bg">
		  <%= @student_invoice_data.name %>
		</div>
	      </div>

	      <div class="label-field-pair">
		<label><%= t('app.views.student_invoice_datas.show.street') %></label>
		<div class="text-input-bg">
		  <%= @student_invoice_data.street %>
		</div>
	      </div>

	      <div class="label-field-pair">
		<label><%= t('app.views.student_invoice_datas.show.colony') %></label>
		<div class="text-input-bg">
		  <%= @student_invoice_data.address %>
		</div>
	      </div>

	      <div class="label-field-pair">
		<label><%= t('app.views.student_invoice_datas.show.full_name') %></label>
		<div class="text-input-bg">
		  <%= @student_invoice_data.student.full_name %>
		</div>
	      </div>

	      <div class="link-heading">
	 	<%= link_to t('app.views.student_invoice_datas.show.edit'), edit_student_invoice_data_path(@student_invoice_data) %>
	      </div>

	
	</div>
</div>

