<div id="content-header">
  <img src="/images/show_finance.png" alt="" />
  <h1><%= t('app.views.student_invoice_datas.new.finance_manager') %></h1>
  <h3><%= t('app.views.student_invoice_datas.new.add_relatioship') %> </h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>


<div id="page-yield">

	<% form_for(@student_invoice_data) do |f| %>

	  <%= f.error_messages %>

	    <div class="box">
		<div class="label-field-pair">
		  <label><%= t('app.views.student_invoice_datas.new.name') %></label>
		  <div class="text-input-bg">
		    <%= f.text_field :name %>
		  </div>
		</div>

		<div class="label-field-pair">
		  <label><%= t('app.views.student_invoice_datas.new.street') %></label>
		  <div class="text-input-bg">
		    <%= f.text_field :street %>
		  </div>
		</div>

		<div class="label-field-pair">
		  <label><%= t('app.views.student_invoice_datas.new.colony') %></label>
		  <div class="text-input-bg">
		    <%= f.text_field :address %>
		  </div>
		</div>

		<div class="label-field-pair">
		  <label><%= t('app.views.student_invoice_datas.new.rfc') %></label>
		  <div class="text-input-bg">
		    <%= f.text_field :rfc %>
		  </div>
		</div>

		<div class="label-field-pair">
		  <label><%= t('app.views.student_invoice_datas.new.student') %></label>
		  <div class="text-input-bg">
		    <%= f.select :student_id, options_from_collection_for_select(@students, 'id', 'full_name'), { :include_blank => true } %>
		  </div>
		</div>

		<div id="submit-button">
			<%= submit_tag t('app.views.student_invoice_datas.new.create') %>
		</div>
	     </div>	    

	<% end %>
</div>