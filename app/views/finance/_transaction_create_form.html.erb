<% form_for :transaction do |f| %>
  <div id="create_user_form">

    <%= f.error_messages %>

    <div class="label-field-pair">
      <%= f.label t('app.views.finance._transaction_create_form.batches') %>
      <div class="text-input-bg">
	<%= select(:batch, 
                   :id, 
                   options_from_collection_for_select(@batches, :id, :full_name),
                   {:prompt => 'Select a batch'},
                   {:onChange => "#{remote_function(:url => {:action => 'load_students_for_income'}, :with => "'batch_id='+value")}" } ) %>
      </div>
    </div>

    <div class="label-field-pair">
      <%= f.label t('app.views.finance._transaction_create_form.student_id') %>
      <div class="text-input-bg" id="students_by_batch"></div>
    </div>

    <div class="label-field-pair">
      <%= f.label t('app.views.finance._transaction_create_form.title') %>
      <div class="text-field-bg">
        <%= f.text_field :title %>
      </div>
    </div>

    <div class="label-field-pair">
      <%= f.label t('app.views.finance._transaction_create_form.description') %>
      <div class="text-field-bg">
	<%= f.text_field :description %>
      </div>
    </div>

    <div class="label-field-pair">
      <%= f.label t('app.views.finance._transaction_create_form.amount') %>
      <div class="text-field-bg">
	<%= f.text_field :amount %>
      </div>
    </div>

    <div class="label-field-pair">
      <%= f.label t('app.views.finance._transaction_create_form.payment_id') %>
      <div class="text-input-bg">
	<%= f.select :payment_form_id, options_from_collection_for_select(@payment_forms, :id, :name), :prompt => t('app.views.finance._transaction_create_form.select_payform') %>
      </div>
    </div>

    <div class="label-field-pair">
      <%= f.label t('app.views.finance._transaction_create_form.category') %>
      <div class="text-input-bg">
	<%= f.select :category_id, options_from_collection_for_select(@categories, :id, :name), :prompt => t('app.views.finance._transaction_create_form.select_category')%>
      </div>
    </div>

       <%=  submit_tag t('app.views.finance._transaction_create_form.save'),:class=>'submit_button' %>
  </div>
<% end %>
