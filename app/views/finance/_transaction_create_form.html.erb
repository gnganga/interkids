<% form_for :transaction do |f| %>
  <div id="create_user_form">

    <%= f.error_messages %>

    <div class="label-field-pair">
      <%= f.label :batches_id %>
      <div class="text-input-bg">
	<%= select(:batch, 
                   :id, 
                   options_from_collection_for_select(@batches, :id, :full_name),
                   {:prompt => 'Select a batch'},
                   {:onChange => "#{remote_function(:url => {:action => 'load_students_for_income'}, :with => "'batch_id='+value")}" } ) %>
      </div>
    </div>

    <div class="label-field-pair">
      <%= f.label :student_id %>
      <div class="text-input-bg" id="students_by_batch"></div>
    </div>

    <div class="label-field-pair">
      <%= f.label :title %>
      <div class="text-field-bg">
        <%= f.text_field :title %>
      </div>
    </div>

    <div class="label-field-pair">
      <%= f.label :description %>
      <div class="text-field-bg">
	<%= f.text_field :description %>
      </div>
    </div>

    <div class="label-field-pair">
      <%= f.label :amount %>
      <div class="text-field-bg">
	<%= f.text_field :amount %>
      </div>
    </div>

    <div class="label-field-pair">
      <%= f.label :payment_form_id %>
      <div class="text-input-bg">
	<%= f.select :payment_form_id, options_from_collection_for_select(@payment_forms, :id, :name), :prompt => 'Select a payment form' %>
      </div>
    </div>

    <div class="label-field-pair">
      <%= f.label :category_id %>
      <div class="text-input-bg">
	<%= f.select :category_id, options_from_collection_for_select(@categories, :id, :name), :prompt => 'Select a category' %>
      </div>
    </div>

    <%= f.submit "â–º Save", :class=>'submit_button' %>
  </div>
<% end %>
