<label class="head_label"><%= t('app.views.finance._fee_collection_create_form.set_fee_collection_date') %><span></span></label>

<% form_remote_for @finance_fee_collection,
  :url => {:action => 'fee_collection_create'},
  :complete => 'Modalbox.hide();return false;' do |form| %>

<div id="form-errors"></div>
<div class="label-field-pair">
    <label for="reason"><%= t('app.views.finance._fee_collection_create_form.fee_category') %></label>
    <div class="text-input-bg">
      <%= form.select(:fee_category_id, @fee_categories.map { |item| [item.name, item.id] },
      {:prompt => t('app.views.finance._fee_collection_create_form.sel_category') },
      {:onchange => "#{remote_function(:url => {:action => "fee_collection_batch_update"}, :with => "'id='+value")}"})
      %></div>
  </div>
  <div id ="batchs"></div>
  <div class="label-field-pair">
    <label for="reason"><%= t('app.views.finance._fee_collection_create_form.fee_collection_name') %></label>
    <div class="text-input-bg"><%= form.text_field :name%></div>
  </div>
  <div class="label-field-pair">
    <label for="reason"><%= t('app.views.finance._fee_collection_create_form.start_date') %></label>
    <div class="text-input-bg"><%= calendar_date_select_tag 'finance_fee_collection[start_date]', Date.today %></div>
  </div>
  <div class="label-field-pair">
    <label for="reason">  <%= t('app.views.finance._fee_collection_create_form.end_date') %></label>
    <div class="text-input-bg"><%= calendar_date_select_tag 'finance_fee_collection[end_date]', Date.today %></div>
  </div>
  <div class="label-field-pair">
    <label for="reason"><%= t('app.views.finance._fee_collection_create_form.due_date') %></label>
    <div class="text-input-bg"><%= calendar_date_select_tag 'finance_fee_collection[due_date]', Date.today %></div>
  </div>

  <div class="extender"></div>
  <div id="submit-button">
      <%=  submit_tag t('app.views.finance._fee_collection_create_form.create') ,:class=>'submit_button' %>
  </div>
<% end %>
