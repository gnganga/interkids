<label class="head_label"><%=t('app.views.finance._master_category_edit_form.edit_master_category')%><span></span></label>



  <div id="grading-levels-form">

  <% form_remote_for @finance_fee_category,
    :url=>{:action=>'master_category_update',
    :id => @finance_fee_category.id},
   :complete => 'Modalbox.hide();return false;' do |f| %>

       <div class="label-field-pair">
    <div class="label-container"><%= f.label t('app.views.finance._master_category_edit_form.name') %></div>
    <div class="input-container"><%= f.text_field :name %></div>
   </div>

  <div class="label-field-pair">
    <div class="label-container"><%= f.label t('app.views.finance._master_category_edit_form.description') %></div>
    <div class="input-container"><%= f.text_field :description %></div>
  </div>

     <div class="label-field-pair">
    <div class="label-container"><label><%=t('app.views.finance._master_category_edit_form.select_course')%></label></div>
    <div class="input-container">
<% unless @finance_fee_category.batch.nil? %>
  <%= f.text_field :batch, :value => @finance_fee_category.batch.full_name, :disabled => true   %>
  <% else %>
  <%= f.text_field :batch, :value => '', :disabled => true   %>
  <% end %>
    </div>

  </div>


  <%=  submit_tag t('app.views.finance._master_category_edit_form.save'),:class=>'submit_button' %>
    <div id="form-errors"></div>
  <% end %>
</div>