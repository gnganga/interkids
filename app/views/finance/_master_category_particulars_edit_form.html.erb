<label class="head_label"><%=t('app.views.finance._master_category_particulars_edit_form.title')%><span></span></label>


<div id="grading-levels-form">

  <% form_remote_for  @finance_fee_particulars,:url=>{:action=>'master_category_particulars_update',:id => @finance_fee_particulars.id},:complete => 'Modalbox.hide();return false;'  do |f| %>

  <div id="form-errors"></div>

  <div class="label-field-pair">
    <div class="label-container"> <%= f.label t('app.views.finance._master_category_particulars_edit_form.name') %></div>
    <div class="input-container"><%= f.text_field :name %></div>
   </div>

   <div class="label-field-pair">
    <div class="label-container"><%= f.label t('app.views.finance._master_category_particulars_edit_form.description') %></div>
    <div class="input-container"><%= f.text_field :description %></div>
   </div>
   <div class="label-field-pair2">
    <div class="label-container2"><label><%=t('app.views.finance._master_category_particulars_edit_form.create_using')%></label></div>
    <div class="input-container2"> <%=t('app.views.finance._master_category_particulars_edit_form.admission_no')%><%= radio_button("particulars","select","student",
        {:onchange => "#{remote_function(:url => {:action => "student_or_student_category"},
          :with => "'select_value='+value")}"}) %><br />
       <%=t('app.views.finance._master_category_particulars_edit_form.student_category')%><%= radio_button("particulars","select","category",
        {:onchange => "#{remote_function(:url => {:action => "student_or_student_category"},
          :with => "'select_value='+value")}"}) %>

    </div>
   </div>


  <div id="student"></div>

  <div class="label-field-pair">
    <div class="label-container"><%= f.label t('app.views.finance._master_category_particulars_edit_form.amount') %></div>
    <div class="input-container"> <%= f.text_field :amount %></div>
   </div>


  <%=  submit_tag t('app.views.finance._master_category_particulars_edit_form.update'),:class=>'submit_button' %>


<% end %>
</div>