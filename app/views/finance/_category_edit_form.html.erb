<% form_remote_for(:finance_category,
                   :url => {:action => 'category_update', :id => @finance_category.id},
                   :complete => 'Modalbox.hide();return false;') do |f| %>

<div class="label-field-pair">
  <div class="label-container">
    <%= f.label :name %>
  </div>
  <div class="input-container">
    <%= f.text_field :name %>
  </div>
</div>

<div class="label-field-pair">
  <div class="label-container">
    <%= f.label :description %>
  </div>
  <div class="input-container">
    <%= f.text_field :description %>
  </div>
</div>

<div class="label-field-pair">
  <div class="label-container">
    <%= f.label :cash_box_id %>
  </div>
  <div class="text-input-bg">
    <%= f.select(:cash_box_id, options_from_collection_for_select(CashBox.all, :id, :name, @finance_category.cash_box_id), :prompt => 'Select a cash box' ) %>
  </div>
</div>

<div class="label-field-pair">
  <div class="label-container">
    <label>Is this under income?</label>
  </div>
  <div class="input-container">
    <%= f.check_box :is_income %>
  </div>
</div>
  
<div id="modelbox-submit">
  <%= f.submit "â–º Update", :class=>'submit_button' %>
</div>
<% end %>
