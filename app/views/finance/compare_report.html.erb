<div id="content-header">
   <img src="/images/show_finance.png" alt="" />
  <h1><%=t('app.views.finance.compare_report.compare_report')%></h1>
  <h3><%=t('app.views.finance.compare_report.manage_transactions')%></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">
  <div class="box">
  <div id="report">
    <% form_for :report, :url => {:action => 'report_compare'} do |form| %>
      <div class="label-field-pair">
        <label>
          <%=t('app.views.finance.compare_report.select_start_date')%>
        </label>
        <div class="text-input-bg">
          <%= calendar_date_select_tag 'start_date', Date.today %>
        </div>
      </div>
      <div class="label-field-pair">
        <label>
          <%=t('app.views.finance.compare_report.select_end_date')%>
        </label>
        <div class="text-input-bg">
          <%= calendar_date_select_tag 'end_date', Date.today %>
        </div>
      </div>
    <h4><%=t('app.views.finance.compare_report.compare_with')%> </h4>
      <div class="label-field-pair">
        <label>
          <%=t('app.views.finance.compare_report.select_start_date')%>
        </label>
        <div class="text-input-bg">
          <%= calendar_date_select_tag 'start_date2', Date.today %>
        </div>
      </div>
      <div class="label-field-pair">
        <label>
          <%=t('app.views.finance.compare_report.select_end_date')%>
        </label>
        <div class="text-input-bg">
          <%= calendar_date_select_tag 'end_date2', Date.today %>
        </div>
      </div>
          <%=  submit_tag t('app.views.finance.compare_report.create_report'),:class=>'submit_button' %>
    <%end%>
  </div>
</div>
</div>

