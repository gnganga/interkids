<label class="head_label"><%=t('app.views.finance._category_create_form.category_name_title')%><span></span></label>

<% form_remote_for(:finance_category,
                   :url => {:action => 'category_create'},
                   :complete => 'Modalbox.hide();return false;') do |f| %>


<div class="label-field-pair">
  <div class="label-container">
    <%= f.label t('app.views.finance._category_create_form.category_name') %>
  </div>
  <div class="input-container">
    <%= f.text_field :name %>
  </div>
</div>

<div class="label-field-pair">
  <div class="label-container">
    <%= f.label t('app.views.finance._category_create_form.description') %>
  </div>
  <div class="input-container">
    <%= f.text_field :description %>
  </div>
</div>

<div class="label-field-pair">
  <div class="label-container">
    <%= f.label t('app.views.finance._category_create_form.cash_box_id')%>
  </div>
  <div class="text-input-bg">
    <%= f.select(:cash_box_id, options_from_collection_for_select(CashBox.all, :id, :name), :prompt => t('app.views.finance._category_create_form.select_cash_box')) %>
  </div>
</div>

<div class="label-field-pair">
  <div class="label-container">
    <label><%=t('app.views.finance._category_create_form.question')%></label>
  </div>
  <div class="input-container">
    <%= f.check_box :is_income %>
  </div>
</div>
  
  <div id="modelbox-submit">
          <%=  submit_tag t('app.views.finance._category_create_form.create'),:class=>'submit_button' %>
  </div>
<% end %>
