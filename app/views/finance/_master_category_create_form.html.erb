<label class="head_label"><%= t('app.views.finance._master_category_create_form.create_master_category_fees') %><span></span></label>

 
  <div id="grading-levels-form">

  <% form_remote_for @finance_fee_category, :url=>{:action=>'master_category_create'} do |f| %>

    <div id="form-errors"></div>


   <div class="label-field-pair">
    <div class="label-container"><%= f.label t('app.views.finance._master_category_create_form.name') %></div>
    <div class="input-container"><%= f.text_field :name %></div>
   </div>

  <div class="label-field-pair">
    <div class="label-container"><%= f.label t('app.views.finance._master_category_create_form.description') %></div>
    <div class="input-container"><%= f.text_field :description %></div>
  </div>

  <div class="label-field-pair">
    <div class="label-container"><label><%= t('app.views.finance._master_category_create_form.select_course') %></label></div>
    <div class="input-container"><%= f.select :batch_id, @batches.map { |c| [c.full_name, c.id] },{:prompt => t('app.views.finance._master_category_create_form.select_course') } %></div>
  </div>

    <%=  submit_tag t('app.views.finance._master_category_create_form.save'),:class=>'submit_button' %>


  <% end %>
</div>