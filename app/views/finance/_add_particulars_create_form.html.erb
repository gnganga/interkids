<label class="head_label"><%= t('app.views.finance._add_particulars_create_form.add_particulars') %><span></span></label>

<% form_remote_for :finance_fee_particulars, :url => {:action => 'add_particulars_create',:id => @collection_date.id} do |form| %>
  <div id="form-errors"></div>
  <div class="label-field-pair">
    <div class="label-container"><label><%= t('app.views.finance._add_particulars_create_form.fee_name') %></label> </div>
    <div class="input-container"><%= form.text_field :name %></div>
   </div>
     <div class="label-field-pair">
    <div class="label-container"><label><%= t('app.views.finance._add_particulars_create_form.description') %></label> </div>
    <div class="input-container"><%= form.text_field :description %></div>
   </div>
<div class="label-field-pair2">
    <div class="label-container2"><label><%= t('app.views.finance._add_particulars_create_form.create_using') %></label></div>
    <div class="input-container2">
     <div class="opt"><%= radio_button("particulars","select","all",:checked => true) %><%= t('app.views.finance._add_particulars_create_form.all') %></div>
     <div class="opt"><%= radio_button("particulars","select","student",
      {:onchange => "#{remote_function(:url => {:action => "student_or_student_category"},
        :with => "'select_value='+value")}"}) %> <%= t('app.views.finance._add_particulars_create_form.admission_no') %></div>
      <div class="opt"> <%= radio_button("particulars","select","category",
      {:onchange => "#{remote_function(:url => {:action => "student_or_student_category"},
        :with => "'select_value='+value")}"}) %><%= t('app.views.finance._add_particulars_create_form.student_category') %></div>
    </div>
   </div>
  <div id="student"></div>
    <div class="label-field-pair">
    <div class="label-container"><label><%= t('app.views.finance._add_particulars_create_form.amount') %></label> </div>
    <div class="input-container"><%= form.text_field :amount %></div>
   </div>
    <%=  submit_tag t('app.views.finance._add_particulars_create_form.create'),:class=>'submit_button' %>

<% end %>



