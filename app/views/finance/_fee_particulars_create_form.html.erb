<label class="head_label"><%=t('app.views.finance._fee_particulars_create_form.title')%><span></span></label>


<div id="grading-levels-form">

  <% form_remote_for  @finance_fee_particulars,:url =>{:action => 'fees_particulars_create'}  do |f| %>

    <div id="form-errors"></div>
  
    <div class="label-field-pair">
    <div class="label-container"><label><%=t('app.views.finance._fee_particulars_create_form.fee_category')%></label> </div>
    <div class="input-container"><%= f.select :finance_fee_category_id, @fees_categories.map { |c| [c.name, c.id] }%></div>
   </div>

  <div class="label-field-pair">
    <div class="label-container"> <%= f.label t('app.views.finance._fee_particulars_create_form.name') %></div>
    <div class="input-container"><%= f.text_field :name %></div>
   </div>

   <div class="label-field-pair">
    <div class="label-container"><%= f.label t('app.views.finance._fee_particulars_create_form.description') %></div>
    <div class="input-container"><%= f.text_field :description %></div>
   </div>
   <div class="label-field-pair2">
    <div class="label-container2"><label><%=t('app.views.finance._fee_particulars_create_form.create_using')%></label></div>
    <div class="input-container2">
     <div class="opt"><%= radio_button("particulars","select","all",:checked => true)%> <%=t('app.views.finance._fee_particulars_create_form.all')%></div>
     <div class="opt"><%= radio_button("particulars","select","student",
        {:onchange => "#{remote_function(:url => {:action => "student_or_student_category"},
          :with => "'select_value='+value")}"}) %> <%=t('app.views.finance._fee_particulars_create_form.admission_no')%></div>
      <div class="opt"> <%= radio_button("particulars","select","category",
        {:onchange => "#{remote_function(:url => {:action => "student_or_student_category"},
          :with => "'select_value='+value")}"}) %><%=t('app.views.finance._fee_particulars_create_form.student_category')%></div>
    </div>
   </div>
 
 
  <div id="student"></div>

  <div class="label-field-pair">
    <div class="label-container"><%= f.label t('app.views.finance._fee_particulars_create_form.amount') %></div>
    <div class="input-container"> <%= f.text_field :amount %></div>
   </div>


  <%=  submit_tag t('app.views.finance._fee_particulars_create_form.create'),:class=>'submit_button' %>

<% end %>
</div>