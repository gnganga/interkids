<div id="content-header">
     <img src="/images/show_finance.png" alt="Finance" />
  <h1><%=t('app.views.finance.update_monthly_report.transactions_report')%></h1>
  <h3><%=t('app.views.finance.update_monthly_report.manage_transactions')%></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="inner-tab-menu">
  <ul>
    <li><%= link_to t('app.views.finance.update_monthly_report.pdf_report'),
            {:controller => "finance", :action => "transaction_pdf", :start_date => @start_date, :end_date=>@end_date},:target => '_blank' %></li>
  </ul>
</div>
<div id="page-yield">

  <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
    <% unless @salary == 0 and @donations_total == 0 and @transactions_fees and @other_transactions.empty? %>
      <tr class="tr-head">
        <td><%=t('app.views.finance.update_monthly_report.id')%></td>
        <td><%=t('app.views.finance.update_monthly_report.particulars')%></td>
        <td><%=t('app.views.finance.update_monthly_report.expense')%>(<%= currency %>)</td>
        <td><%=t('app.views.finance.update_monthly_report.income')%>(<%= currency %>)</td>

        <td><%=t('app.views.finance.update_monthly_report.date')%></td>
      </tr>
      <tr class="tr-blank"></tr>
      <% index = 0  %>
      <%income_total = 0%>
      <%expenses_total = 0%>

      <% unless @hr.nil? %>

        <tr class="tr-odd">
          <td class="col-1"><%= index+=1 %></td>
          <% unless @salary == 0 %>
            <td class="col-2"><%= link_to t('app.views.finance.update_monthly_report.salary_account') , :action => 'salary_department' , :start => @start_date,:end => @end_date%> </td>
          <% else %>
            <td class="col-2"><%= t('app.views.finance.update_monthly_report.salary_account')%></td>
          <% end %>
          <td class="col-3" align="right"><%= @salary%></td>
          <td> </td>
          <td class="col-3"> - </td>
        </tr>

      <% end %>

      <tr class="tr-even">
      <td class="col-1"><%= index+=1 %></td>
        <% unless @donations_total == 0 %>
          <td class="col-2"><%= link_to t('app.views.finance.update_monthly_report.donations'), :action => 'donations_report',:start => @start_date,:end => @end_date%></td>
        <% else %>
          <td class="col-2"><%=t('app.views.finance.update_monthly_report.donations')%></td>
        <% end %>
        <td></td>
        <td class="col-3" align="right"><%=@donations_total%></td>
        <td class="col-3"> - </td>
      </tr>


      <tr class="tr-odd">
        <td class="col-1"><%= index+=1 %></td>
        <% unless @transactions_fees == 0 %>
          <td class="col-2"><%= link_to t('app.views.finance.update_monthly_report.fees_acount') , :action => 'fees_report' , :start => @start_date,:end => @end_date%> </td>
        <% else %>
          <td class="col-2"><%=t('app.views.finance.update_monthly_report.fees_acount')%></td>
        <% end %>
        <td></td>
        <td class="col-3" align="right"><%=@transactions_fees%></td>
        <td class="col-3"> - </td>
      </tr>
 
      <% @other_transactions.each_with_index do |t,i| %>
        <tr class="tr-<%= cycle("even","odd") %>">
          <td class ="col-1"><%=i+index%></td>
          <% if t.category.is_income? %>
            <td class="col-2"><%= t.title %> </td>
            <td></td>
            <td class="col-3" align="right"><%=  t.amount%></td>
            <td class="col-3"><%=t.created_at.strftime("%m-%d-%Y")%></td>
            <%income_total +=t.amount%>

          <%else%>
            <td class="col-2"><%= t.title %> </td>
            <td class="col-3" align="right"><%=  t.amount%></td>
            <td></td>
            <td class="col-3"><%=t.created_at.strftime("%m-%d-%Y")%></td>

            <%expenses_total +=t.amount%>
          <%end%>
        </tr>
      <%end%>
      <tr class="tr-blank"></tr>
      <tr class="tr-odd">
        <td class="col-1"> </td>
        <td class="col-2"><%=t('app.views.finance.update_monthly_report.grand_total')%></td>
        <% if @grand_total >= 0 %>
          <td></td>
          <td class="col-3" align="right"><%= @grand_total%></td>
        <% else %>
          <td class="col-3" align="right"><%= @grand_total%></td>
          <td></td>
        <% end %>
        <td class="col-3">  </td>
      </tr>
    <% else %>
      <tr class="tr-head">
        <td><%=t('app.views.finance.update_monthly_report.no_records_for_date')%></td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate@other_transactions,:params => {:start_date => @start_date , :end_date => @end_date}%>
  <br/>
  <br/>
 <% unless @salary == 0 and @donations_total == 0 and @transactions_fees and @other_transactions.empty? %>
    <script type="text/javascript" src="/javascripts/swfobject.js"></script>
    <%= @graph %>
  <% end %>

</div>
