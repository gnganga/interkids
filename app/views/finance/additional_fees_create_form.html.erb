<div id="content-header">
  <img src="/images/show_finance.png" alt="" />
  <h1><%= t('app.views.finance.additional_fees_create_form.additional_fees') %></h1>
  <h3><%= t('app.views.finance.additional_fees_create_form.create_additional_fees') %> </h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="page-yield">

  <% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p><% end %>
   <div class="box">
  <% form_for(:additional_fees,:url => {:action=> 'additional_fees_create'}) do |form| %>

     <div class="label-field-pair">
       <div class="label-container"><label><%= t('app.views.finance.additional_fees_create_form.name') %>* :</label> </div>
    <div class="input-container"><%= form.text_field :name %></div>
   </div>
       <div class="label-field-pair">
	 <div class="label-container"><label><%= t('app.views.finance.additional_fees_create_form.description') %>:</label></div>
    <div class="input-container"><%= form.text_field :description %></div>
   </div>
       <div class="label-field-pair">
	 <div class="label-container"><label><%= t('app.views.finance.additional_fees_create_form.course') %>:</label></div>
    <div class="input-container"><%= form.select :batch_id, @batches.map { |c| [c.full_name, c.id] },:prompt => t('app.views.finance.additional_fees_create_form.select_course') %></div>
   </div>
       <div class="label-field-pair">
	 <div class="label-container"><label><%= t('app.views.finance.additional_fees_create_form.start_date') %>*:</label></div>
    <div class="input-container"><%= calendar_date_select_tag 'additional_fees[start_date]', Date.today %></div>
   </div>
       <div class="label-field-pair">
	 <div class="label-container"><label><%= t('app.views.finance.additional_fees_create_form.end_date') %>*:</label></div>
    <div class="input-container"><%= calendar_date_select_tag 'additional_fees[end_date]', Date.today %></div>
   </div>
       <div class="label-field-pair">
	 <div class="label-container"><label><%= t('app.views.finance.additional_fees_create_form.due_date') %>*:</label></div>
    <div class="input-container"><%= calendar_date_select_tag 'additional_fees[due_date]', Date.today %></div>
   </div>

    <%= submit_tag t('app.views.finance.additional_fees_create_form.save'),:class=>'submit_button' %>
  <% end %>


</div>
</div>
