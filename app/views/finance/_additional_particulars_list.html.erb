 <div class="name"><%= t('app.views.finance._additional_fees_list.category_name') %></div><div class="val"><span>:</span><%= @additional_category.name %></div>
 <div class="name"><%= t('app.views.finance._additional_fees_list.description') %></div><div class="val"><span>:</span><%= @additional_category.description %></div>

  <% unless @additional_category.batch.nil? %>
  <div class="name"><%= t('app.views.finance._additional_fees_list.course') %></div><div class="val"><span>:</span><%= @additional_category.batch.full_name %></div>
    <% else %>
  <div class="name"><%= t('app.views.finance._additional_fees_list.course') %></div><div class="val"><span>:</span>NIL</div>
  <% end %>
<br/>

<% unless @particulars.empty? %>
  <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
    <tr class="tr-head">
      <td><%= t('app.views.finance._additional_fees_list.id') %></td>
      <td><%= t('app.views.finance._additional_fees_list.particulars') %></td>
      <td><%= t('app.views.finance._additional_fees_list.student_category') %></td>
      <td><%= t('app.views.finance._additional_fees_list.admission_no') %></td>
      <td><%= t('app.views.finance._additional_fees_list.amount') %>(<%= currency %>)</td>
      <td><%= t('app.views.finance._additional_fees_list.created_date') %></td>
      <td></td>
    </tr>
    <tr class="tr-blank"></tr>

    <% @particulars.each_with_index do |fees,i| %>
      <tr class="tr-<%= cycle("odd","even") %>">
        <td class="col-1"><%= i+1 %></td>
        <td class="col-3"><%= shorten_string(fees.name,20) %></td>
        <td class="col-3"><%= StudentCategory.find(fees.student_category_id).name unless fees.student_category_id.nil? %></td>
        <td class="col-3">
          <%unless fees.admission_no.nil?%>
            <%  student =  Student.find_by_admission_no(fees.admission_no)%>
            <%= student.nil? ? "N.A." : student.full_name %>
          <% else %>
            -
          <% end %>
        </td>
        <td class="col-1" align="right"><%= fees.amount%></td>
        <td class="col-3"><%= fees.created_at.strftime("%m-%d-%Y") %></td>
        <td class="col-1">
          <%  unless @additional_category.check_fee_collection_for_additional_fees == false %>
            <span class="small"> <%= link_to_remote t('app.views.finance._additional_fees_list.delete'), :confirm=> t('app.views.finance._additional_fees_list.question'),:url => { :action => 'add_particulars_delete',:id => fees.id} %></span>
          <% else %>
            <span class="small-strike">delete</span>
          <% end %>
          <span class="small"> <%= link_to_remote  t('app.views.finance._additional_fees_list.edit') , :url => { :action => 'add_particulars_edit',:id => fees.id} %></span>
        </td>
      </tr>
    <% end %>


  </table>
  <%= will_paginate @particulars %>
<% else %>
  <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
    <tr class="tr-head">
      <td><%= t('app.views.finance._additional_fees_list.no_categories') %></td>
    </tr>
  </table>

<% end%>
<%= link_to t('app.views.finance._additional_fees_list.back'),{:action => 'additional_fees_list'},:class=>'user_button' %>