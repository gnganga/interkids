<label class="head_label"><%= t('app.views.finance._fee_collection_edit.set_fee_collection_date') %><span></span></label>
<% form_remote_for :finance_fee_collection,
  :url => {:action => 'fee_collection_update', :id => @finance_fee_collection.id},
  :complete => 'Modalbox.hide();return false;' do |form| %>
<div id="form-errors"></div>
  <div class="label-field-pair">
    <label for="reason"><%= t('app.views.finance._fee_collection_edit.fee_category') %></label>
    <div class="text-input-bg"> <%= @finance_fee_collection.fee_category.name %></div>
  <div id ="batchs"></div>
  </div>
  <div class="label-field-pair">
    <label for="reason"> <%= t('app.views.finance._fee_collection_edit.course') %></label>
    <div class="text-input-bg"> <%= @finance_fee_collection.batch.full_name %></div>
  <div id ="batchs"></div>
  </div>
  <div class="label-field-pair">
    <label for="reason">  <%= t('app.views.finance._fee_collection_edit.name') %></label>
