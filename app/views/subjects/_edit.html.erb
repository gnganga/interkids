
<div id="subjects-form">
  <p><%= @batch.full_name unless @batch.nil? %></p>

  <% form_remote_for @subject do |f| %>

 <% elective_group_id = (@elective_group.nil? ? nil : @elective_group.id) %>
    <%= f.hidden_field :elective_group_id, :value => elective_group_id %>
    
  <div id="form-errors"></div>

  <div class="label-field-pair">
    <div class="label-container"><%= f.label t('app.views.subjects._edit.name') %></div>
    <div class="input-container"><%= f.text_field :name %></div>
  </div>
    <div class="label-field-pair">
    <div class="label-container"> <%= f.label t('app.views.subjects._edit.code') %></div>
    <div class="input-container"> <%= f.text_field :code %></div>
  </div>
    <div class="label-field-pair">
    <div class="label-container"><%= f.label t('app.views.subjects._edit.max_weekly_classes') %></div>
    <div class="input-container"> <%= f.text_field :max_weekly_classes %></div>
  </div>

  <div class="label-field-pair">
    <div class="label-container"><%= f.label t('app.views.subjects._edit.no_exam') %></div>
    <div class="input-container"><%= f.check_box :no_exams %></div>
  </div>

<%= submit_tag "", :value => t('app.views.subjects._edit.save'), :class => "submit_button" %>

  <% end %>
</div>
